    <div class="container-fluid bg-white" style=" margin: 0%; padding: 0%; ">
        
        <div class="row " style="padding: 2%; margin-left: 4%;">
            
            <div class="col col-lg-4 ">
                <h3>Login</h3>
                <form action=" ">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">User Name</label>
                        <input name="name" type="text" class="form-control" id="exampleFormControlInput1"
                            placeholder="user name">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Email address</label>
                        <input name="email" type="email" class="form-control" id="exampleFormControlInput1"
                            placeholder="email address">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Password</label>
                        <input name="password" type="password" class="form-control" id="exampleFormControlInput1"
                            placeholder="password">
                    </div>

                    
                    <a type="button"  class="btn btn-success text-white" href="/" >Submit</a>
                </form>
            </div>
        </div>
